extends layout

block append script

block content
	.row
		.col-sm-12
			if user
				h1 Welcome back
					span= user.name
	.row
		.col-sm-8
			h3 My groups
			table
				thead
					tr
						th
				tbody
					each group in user.groups
						tr
							td= group
			if user && user.groups
				ul
					each group in user.groups
						li= group
		.col-sm-4
			h3 Blah
